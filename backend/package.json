{
    "name": "backend",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "dev": "nodemon server.js",
        "docker:build": "docker build --tag snap-tweet-api --file ./Dockerfile ../..",
        "docker:run": "docker run --rm --publish 5000:5000 nap-tweet-api",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:integration": "jest --coverage --runTestsByPath tests/integration/",
        "coverage-badge": "jest-coverage-badges"
    },
    "dependencies": {
        "backend": "file:",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mongoose": "^6.8.3",
        "nodemon": "^3.1.9"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.26.9",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "jest-coverage-badges": "^1.1.2",
        "supertest": "^7.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    }
}